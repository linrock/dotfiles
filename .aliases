# vim:ft=sh

alias ls='ls -h -X --color=auto --group-directories-first --hide="*.pyc"'
alias tree='tree -I "*.pyc"'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias pacman='pacman-color'
alias gtick='aoss gtick'
alias vi='vim'
alias man='PAGER=vimpager man'

# Colorize readline prompts
alias mysql="rlwrap -a -p'1;36;40' mysql"

# Super abbreviations
alias g='git'
alias p='ps ax | grep '
alias v='vim'

alias raked='rake db:schema:load && rake db:seed'
